<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/inforRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray" >

        <TextView
            android:id="@+id/taskNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Task:" />

        <TextView
            android:id="@+id/timeCounterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1 second" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listViewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inforRelativeLayout" >

        <ListView
            android:id="@+id/listView"
            android:layout_width="400px"
            android:layout_height="wrap_content" >
        </ListView>

        <ImageView
            android:id="@+id/redBoxImage"
            android:layout_width="400px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/redbox" />
    </RelativeLayout>

</RelativeLayout>